<div class="card mb-3" style="max-width: 350px;">
    <div class="card-body">
        <h5 class="card-title">@Value.Name</h5>
        <span class="card-text mb-2">
            <strong>Current Value:</strong> @Value.CurrentValue
        </span>
        <div class="d-flex align-items-center mb-2">
            <div class="card-text mb-0 me-2" style="min-width: 80px;">
                <strong>Level:</strong> @Value.Level / @Value.MaxLevel
            </div>
            <div class="btn-group" role="group">
                <button class="btn btn-sm btn-outline-secondary"
                        @onclick="DecrementLevel"
                        disabled="@(_isDecrementDisabled)">
                    -
                </button>
                <button class="btn btn-sm btn-outline-primary"
                        @onclick="IncrementLevel"
                        disabled="@(_isIncrementDisabled)">
                    +
                </button>
            </div>
        </div>
        @if (Value.SupportsModuleSubstat)
        {
            <div class="d-flex align-items-center">
                <label class="form-label small mb-0 me-2"><strong>Module Sub-Effect:</strong></label>
                <input type="number"
                       class="form-control form-control-sm"
                       style="width: 80px;"
                       step="1"
                       min="0"
                       @bind="SubModuleValue"
                       @bind:event="oninput"
                       @onchange="OnSubModuleValueChanged"
                       placeholder="0.00" />
            </div>
        }
    </div>
</div>