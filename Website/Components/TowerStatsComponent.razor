<div class="tower-stats-section mb-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning bg-gradient text-dark">
            <h5 class="card-title mb-0">
                <i class="me-2">🏗️</i>Tower Statistics
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Tower Radius -->
                <div class="col-md-6 col-lg-4">
                    <div class="stat-item">
                        <label class="stat-label">
                            <i class="me-2">📏</i>Tower Radius
                        </label>
                        <div class="input-group">
                            <input type="number"
                                   class="form-control stat-input"
                                   step="0.1"
                                   min="0"
                                   @bind="TowerStats.TowerRadius"
                                   @bind:event="onchange" @bind:after="OnValueChanged"
                                   placeholder="Enter radius..." />
                            <span class="input-group-text stat-unit">units</span>
                        </div>
                    </div>
                </div>

